/* 页面容器 */
.container {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 25%, #f8fafc 25%, #f1f5f9 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.95;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  top: 300rpx;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(102, 126, 234, 0.1) 0%, transparent 100%);
  z-index: 0;
}

/* 收支类型切换 */
.type-selector {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 8rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 22rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.type-item.active {
  color: white;
  font-weight: 700;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.2);
  transform: translateY(-3rpx);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.type-item.active.expense {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}

.type-item.active.income {
  background: linear-gradient(135deg, #52c41a, #389e0d);
}

/* 金额输入区域 */
.amount-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 100rpx 40rpx;
  box-shadow: 0 16rpx 50rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  position: relative;
  z-index: 1;
}

.amount-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 0 0 12rpx 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.amount-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(102, 126, 234, 0.3) 50%, transparent 100%);
}

.amount-input-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  border: 3rpx solid rgba(102, 126, 234, 0.2);
  box-shadow: 0 0 0 1rpx rgba(102, 126, 234, 0.1), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.5);
  min-height: 160rpx;
}

.currency-symbol {
  font-size: 78rpx;
  font-weight: 700;
  color: #1a202c;
  margin-right: 20rpx;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  line-height: 1;
  height: auto;
  display: flex;
  align-items: center;
}

.amount-input {
  font-size: 78rpx;
  font-weight: 700;
  color: #0f172a;
  text-align: left;
  border: none;
  outline: none;
  background: transparent;
  min-width: 280rpx;
  letter-spacing: 1rpx;
  font-family: 'SF Mono', 'Monaco', 'Consolas', 'PingFang SC', monospace;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  caret-color: #667eea;
  line-height: 1;
  height: auto;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  vertical-align: baseline;
  /* 防止重渲染时光标消失 */
  will-change: auto;
  transform: translateZ(0);
}

.amount-input::placeholder {
  color: #64748b;
  opacity: 0.8;
  font-weight: 500;
}

/* 分类选择 */
.category-section {
  background: white;
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 35rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 35rpx;
  letter-spacing: 0.5rpx;
}

.categories-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.category-item {
  width: calc(25% - 18rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  background: rgba(248, 250, 252, 0.5);
}

.category-item:active {
  transform: translateY(-4rpx) scale(0.98);
  background: rgba(102, 126, 234, 0.08);
}

.category-item.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.category-item.selected::after {
  content: '✓';
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 20rpx;
  height: 20rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  font-weight: bold;
}

.category-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.category-item:active .category-icon {
  transform: scale(1.1);
}

.icon-emoji {
  font-size: 32rpx;
}

.category-name {
  font-size: 26rpx;
  color: #4a5568;
  text-align: center;
  font-weight: 500;
  line-height: 1.2;
}

/* 表单区域 */
.form-section {
  background: white;
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 35rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:active {
  background: rgba(102, 126, 234, 0.03);
  margin: 0 -20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 12rpx;
}

.form-label {
  font-size: 30rpx;
  color: #1a202c;
  width: 140rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.form-value {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #4a5568;
  padding: 12rpx 0;
  font-weight: 400;
}

.arrow {
  color: #cbd5e0;
  font-size: 26rpx;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.form-item:active .arrow {
  transform: rotate(90deg);
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #1a202c;
  text-align: right;
  font-weight: 400;
}

.form-input::placeholder {
  color: #a0aec0;
}

/* 操作按钮 */
.action-buttons {
  padding: 50rpx 20rpx;
  display: flex;
  gap: 24rpx;
}

.save-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  border: none;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.save-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.save-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.save-btn.expense {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.3);
}

.save-btn.income {
  background: linear-gradient(135deg, #52c41a, #389e0d);
  box-shadow: 0 12rpx 40rpx rgba(82, 196, 26, 0.3);
}

.save-btn:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.edit-btn, .delete-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.edit-btn::before, .delete-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.edit-btn:active::before, .delete-btn:active::before {
  width: 200rpx;
  height: 200rpx;
}

.edit-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.25);
}

.delete-btn {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.25);
}

.edit-btn:active, .delete-btn:active {
  transform: translateY(-4rpx) scale(0.98);
}