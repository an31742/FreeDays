/* pages/query-result/query-result.wxss */
.container {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 20%, #f8fafc 20%, #f1f5f9 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.95;
  z-index: 0;
}

/* 查询结果头部 */
.result-header {
  padding: 40rpx 20rpx;
  position: relative;
  z-index: 1;
}

.header-content {
  text-align: center;
  color: white;
}

.result-title {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.result-summary {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  display: inline-block;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.summary-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 统计卡片 */
.stats-section {
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.stats-item {
  text-align: center;
  flex: 1;
  padding: 24rpx 12rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
}

.stats-item.income {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.1), rgba(82, 196, 26, 0.05));
  border-color: rgba(82, 196, 26, 0.2);
}

.stats-item.expense {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), rgba(255, 107, 107, 0.05));
  border-color: rgba(255, 107, 107, 0.2);
}

.stats-item.balance {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-color: rgba(102, 126, 234, 0.2);
}

.stats-label {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.stats-amount {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', monospace;
}

.stats-amount.positive {
  color: #52c41a;
}

.stats-amount.negative {
  color: #ff6b6b;
}

/* 图表展示 */
.chart-section {
  margin: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.chart-header {
  margin-bottom: 30rpx;
}

.chart-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
}

/* 分类图表 */
.category-chart {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chart-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.chart-item:last-child {
  border-bottom: none;
}

.chart-item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.chart-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.chart-name {
  font-size: 30rpx;
  color: #1a202c;
  font-weight: 500;
}

.chart-item-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 2;
}

.chart-bar {
  flex: 1;
  height: 16rpx;
  background: #f1f5f9;
  border-radius: 8rpx;
  overflow: hidden;
}

.chart-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.8s ease;
}

.chart-amount {
  font-size: 28rpx;
  color: #1a202c;
  font-weight: 600;
  font-family: monospace;
  min-width: 100rpx;
  text-align: right;
}

/* 趋势图表 */
.trend-chart {
  display: flex;
  justify-content: space-between;
  align-items: end;
  gap: 8rpx;
  padding: 20rpx 0;
  height: 300rpx;
}

.trend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
}

.trend-month {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  writing-mode: horizontal-tb;
}

.trend-bars {
  display: flex;
  align-items: end;
  gap: 4rpx;
  flex: 1;
  width: 100%;
  margin-bottom: 12rpx;
}

.trend-bar {
  flex: 1;
  min-height: 20rpx;
  border-radius: 4rpx 4rpx 0 0;
  position: relative;
}

.trend-bar-fill {
  width: 100%;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.8s ease;
  min-height: 4rpx;
}

.trend-amounts {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.trend-income,
.trend-expense {
  font-size: 20rpx;
  font-weight: 500;
  font-family: monospace;
}

.trend-income {
  color: #52c41a;
}

.trend-expense {
  color: #ff6b6b;
}

/* 交易记录列表 */
.transactions-section {
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  letter-spacing: 0.5rpx;
}

.transaction-list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background: #fafbfc;
  border-radius: 16rpx;
  border: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
}

.transaction-item:active {
  background: rgba(102, 126, 234, 0.05);
  border-color: rgba(102, 126, 234, 0.1);
  transform: scale(0.995);
}

.transaction-left {
  flex: 1;
}

.transaction-category {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-icon-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.transaction-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.transaction-title {
  font-size: 32rpx;
  color: #1a202c;
  font-weight: 500;
  line-height: 1.3;
}

.transaction-time {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 400;
}

.transaction-right {
  text-align: right;
}

.transaction-amount {
  font-size: 34rpx;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', monospace;
}

.transaction-amount.income {
  color: #52c41a;
}

.transaction-amount.expense {
  color: #ff6b6b;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #94a3b8;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 28rpx;
  color: #94a3b8;
  line-height: 1.5;
}