/* 通用容器样式 */
.container {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 25%, #f8fafc 25%, #f1f5f9 100%);
  min-height: 100vh;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 350rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.95;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  top: 250rpx;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(102, 126, 234, 0.1) 0%, transparent 100%);
  z-index: 0;
}

/* 卡片样式 */
.festival-card {
  width: 92%;
  margin: 24rpx 0;
  padding: 40rpx 30rpx;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 50rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: #ffffff;
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.festival-card:active {
  transform: translateY(-6rpx) scale(0.98);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.festival-card::before {
  content: '';
  position: absolute;
  top: -60%;
  right: -60%;
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 60%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(20rpx, -20rpx) rotate(120deg); }
  66% { transform: translate(-15rpx, 15rpx) rotate(240deg); }
}

/* 图片样式 */
.festival-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  transition: transform 0.3s ease;
  position: relative;
  z-index: 1;
}

.festival-card:active .festival-image {
  transform: scale(1.05);
}

/* 节日名称 */
.festival-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}

/* 倒计时 */
.festival-countdown {
  font-size: 68rpx;
  font-weight: 700;
  margin: 20rpx 0;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}

/* 节日描述 */
.festival-desc {
  font-size: 30rpx;
  opacity: 0.9;
  line-height: 1.4;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}