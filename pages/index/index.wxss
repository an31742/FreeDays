/* 通用容器样式 */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 卡片样式 */
.festival-card {
  width: 90%;
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: #ffffff;
}

/* 图片样式 */
.festival-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 15rpx;
  border-radius: 50%;
  background-color: #ffffff; /* 图片白色底 */
}

/* 节日名称 */
.festival-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 倒计时 */
.festival-countdown {
  font-size: 60rpx;
  font-weight: bold;
  margin: 15rpx 0;
}

/* 节日描述 */
.festival-desc {
  font-size: 28rpx;
}