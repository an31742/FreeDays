/* 页面容器 */
.container {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 20%, #f8fafc 20%, #f1f5f9 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.95;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  top: 200rpx;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(102, 126, 234, 0.1) 0%, transparent 100%);
  z-index: 0;
}

/* 月度统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 45rpx 35rpx;
  color: white;
  box-shadow: 0 16rpx 50rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: -60%;
  right: -60%;
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 60%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(30rpx, -30rpx) rotate(120deg); }
  66% { transform: translate(-20rpx, 20rpx) rotate(240deg); }
}

.stats-header {
  margin-bottom: 35rpx;
  position: relative;
  z-index: 2;
}

.stats-title {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
  gap: 20rpx;
}

.stats-item {
  text-align: center;
  flex: 1;
  padding: 20rpx 15rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  transition: all 0.3s ease;
}

.stats-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.15);
}

.stats-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.95;
  margin-bottom: 16rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.stats-amount {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.stats-amount.positive {
  color: #68d391;
  text-shadow: 0 0 20rpx rgba(104, 211, 145, 0.3), 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.stats-amount.negative {
  color: #fc8181;
  text-shadow: 0 0 20rpx rgba(252, 129, 129, 0.3), 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 快速记账部分 */
.quick-add-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.quick-add-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  border-radius: 28rpx;
  z-index: -1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  letter-spacing: 0.5rpx;
}

.more-btn {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.more-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

/* 标签页 */
.tab-bar {
  display: flex;
  background: #f8fafc;
  border-radius: 16rpx;
  margin-bottom: 35rpx;
  padding: 6rpx;
  border: 1rpx solid #e2e8f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.tab-item.active {
  background: white;
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
  transform: translateY(-2rpx);
}

/* 分类网格 */
.categories-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.category-section {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.category-item {
  width: calc(25% - 18rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  background: rgba(248, 250, 252, 0.5);
}

.category-item:active {
  transform: translateY(-4rpx) scale(0.98);
  background: rgba(102, 126, 234, 0.08);
}

.category-item::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 16rpx;
  padding: 2rpx;
  background: linear-gradient(135deg, transparent, rgba(102, 126, 234, 0.2));
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: xor;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-item:active::after {
  opacity: 1;
}

.category-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.category-item:active .category-icon {
  transform: scale(1.1);
}

.icon-emoji {
  font-size: 32rpx;
}

.category-name {
  font-size: 26rpx;
  color: #4a5568;
  text-align: center;
  font-weight: 500;
  line-height: 1.2;
}

/* 最近交易部分 */
.recent-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.recent-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  border-radius: 28rpx;
  z-index: -1;
}

.transaction-list {
  margin-top: 28rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
  border-radius: 12rpx;
  margin: 0 -16rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  transform: translateY(-2rpx);
}

.transaction-left {
  flex: 1;
}

.transaction-category {
  display: flex;
  align-items: center;
}

.category-icon-small {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.transaction-info {
  display: flex;
  flex-direction: column;
}

.transaction-title {
  font-size: 30rpx;
  color: #1a202c;
  margin-bottom: 6rpx;
  font-weight: 500;
  line-height: 1.3;
}

.transaction-time {
  font-size: 26rpx;
  color: #a0aec0;
  font-weight: 400;
}

.transaction-right {
  text-align: right;
}

.transaction-amount {
  font-size: 34rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  font-family: 'SF Mono', 'Monaco', 'Consolas', 'Liberation Mono', 'Courier New', monospace;
  position: relative;
}

.transaction-amount::before {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 2rpx;
  background: currentColor;
  opacity: 0.2;
  border-radius: 1rpx;
}

.transaction-amount.income {
  color: #22c55e;
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.02) 100%);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(34, 197, 94, 0.1);
  text-shadow: 0 1rpx 3rpx rgba(34, 197, 94, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(34, 197, 94, 0.1);
}

.transaction-amount.expense {
  color: #ef4444;
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.08) 0%, rgba(239, 68, 68, 0.02) 100%);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(239, 68, 68, 0.1);
  text-shadow: 0 1rpx 3rpx rgba(239, 68, 68, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.1);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #4a5568;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  display: block;
  font-size: 28rpx;
  color: #a0aec0;
  line-height: 1.5;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.35);
  z-index: 999;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 3rpx solid rgba(255, 255, 255, 0.2);
}

.fab:active {
  transform: scale(0.85) translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.45);
}

.fab::before {
  content: '';
  position: absolute;
  inset: -6rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.fab:active::before {
  opacity: 1;
}

.fab-icon {
  font-size: 52rpx;
  color: white;
  font-weight: 300;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 查询按钮样式 */
.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 35rpx;
  position: relative;
  z-index: 2;
}

.query-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.query-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.query-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.query-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

/* 查询面板样式 */
.query-panel {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  margin: 20rpx;
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.query-header {
  margin-bottom: 30rpx;
}

.query-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  letter-spacing: 0.5rpx;
}

.query-mode-tabs {
  display: flex;
  background: #f8fafc;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 6rpx;
  border: 1rpx solid #e2e8f0;
}

.query-tab {
  flex: 1;
  text-align: center;
  padding: 18rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
}

.query-tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.date-picker-section {
  margin-bottom: 40rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.picker-label {
  font-size: 32rpx;
  color: #1a202c;
  font-weight: 500;
}

.picker-value {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
  padding: 12rpx 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.query-actions {
  display: flex;
  gap: 20rpx;
}

.query-btn-primary {
  flex: 2;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.query-btn-primary:active {
  transform: scale(0.98);
}

.query-btn-cancel {
  flex: 1;
  background: #f8fafc;
  color: #64748b;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.query-btn-cancel:active {
  background: #e2e8f0;
  transform: scale(0.98);
}